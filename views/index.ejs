<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern To-Do List</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <header>
            <h1>My To-Do List</h1>
            <!-- Form to add a new todo -->
            <form id="todo-form" action="/todos" method="POST">
                <input type="text" id="todo-input" name="text" placeholder="What do you need to do?" autocomplete="off" required>
                <button type="submit">+</button>
            </form>
        </header>
        <main>
            <!-- List of existing todos -->
            <ul id="todo-list">
                <% todos.forEach(todo => { %>
                    <li class="todo-item <%= todo.completed ? 'completed' : '' %>" data-id="<%= todo._id %>">
                        <span class="todo-text">
                            <%= todo.text %>
                        </span>

                        <!-- Form to toggle completion status -->
                        <form class="toggle-form" action="/todos/toggle/<%= todo._id %>" method="POST" style="display: inline;">
                            <button class="toggle-btn" type="submit">✓</button>
                        </form>

                        <!-- Form to delete a todo -->
                        <form class="delete-form" action="/todos/delete/<%= todo._id %>" method="POST" style="display: inline; margin-left: 12px;">
                            <button class="delete-btn" type="submit">×</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </main>
    </div>
    <script src="/script.js"></script>
</body>
</html>